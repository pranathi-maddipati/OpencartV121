<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
 
  <!-- Define properties -->
  <Properties>
    <Property name="basePath">./logs</Property>  <!-- specifying file path in logs folder-->
  </Properties>

  <Appenders>
    <!-- Console Appender -->
    <Console name="Console" target="SYSTEM_OUT">
     
        <PatternLayout pattern ="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>

    <!-- Rolling File Appender using properties -->
    <!-- specifying file name-->
    <RollingFile name="File" fileName="${basePath}/automation.log" 
    filePattern="${basePath}/automation-%d{yyyy-MM-dd}.log"> <!-- generating logs with time stamp-->
       <PatternLayout Pattern="%d{HH:mm:ss.SSS} [%t] %-5level %loggger{36} - %msg%n"/>
         <SizeBasedTriggeringPolicy size="10MB"/>
         </RollingFile>


  </Appenders>

  <Loggers>
    <!-- Root logger references the console and rolling appenders -->
    <Root level="Debug"><!-- Here you can use multiple log levels All<Trace<Debug<info<Warn<Error<Fatal<off-->
    <!-- <AppenderRef ref="Console"/> -->
     <AppenderRef ref="File"/> 
    </Root>
  </Loggers>

</Configuration>